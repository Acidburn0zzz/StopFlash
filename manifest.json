{
    "manifest_version": 2,

    "name": "StopFlash Flash Blocker",
    "short_name": "StopFlash",
    "description": "Dites StopFlash ! Bloque les objets flash pour accélérer le chargement des pages",
    "author": "juloo",

    "offline_enabled": true,

    "version": "0.1.0",

    "icons":
    {
        "16": "icons/stopflash_16.png",
        "32": "icons/stopflash_32.png",
        "64": "icons/stopflash_64.png",
        "128": "icons/stopflash_128.png"
    },

    "permissions": [],

    "browser_action":
    {
        "default_title": "Dites StopFlash !",
        "default_icon": "icons/stopflash_32.png",
        "default_popup": "stopflash.html"
    }
}
